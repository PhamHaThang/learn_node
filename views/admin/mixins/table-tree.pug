mixin table-tree(items,level=1)
    each item, index in items
        - const prefix =Array(level+1).join("-- ")
        tr 
            th  
                input(
                    type="checkbox" 
                    name="id"
                    value=item.id
                )
            td #{item.index}
            td 
                img(src= item.thumbnail, alt= item.title width="100px" height="auto")
            td #{prefix}#{item.title}
            td 
                input(
                    type="number" 
                    name="position"
                    value=item.position 
                    style="width:60px"
                    min="1"
                )
            td 
                a(
                    href="javascript:;" 
                    button-change-status 
                    data-status= item.status
                    data-id= item.id
                    class=`badge ${item.status == "active"?"badge-success": "badge-danger"}`
                    ) #{item.status == "active"?"Hoạt động": "Không hoạt động"}
            td 
                a(class="btn btn-secondary btn-sm" href=`${prefixAdmin}/products-category/detail/${item.id}`) Chi tiết
                a(class="btn btn-warning btn-sm mx-1" href=`${prefixAdmin}/products-category/edit/${item.id}`) Sửa
                button(
                    class="btn btn-danger btn-sm"
                    data-id=item.id
                    button-delete
                ) Xóa
        if item.children && item.children.length > 0
            +table-tree(item.children,level + 1)