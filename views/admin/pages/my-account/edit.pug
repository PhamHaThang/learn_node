extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Chỉnh sửa thông tin tài khoản
    form(
        action=`${prefixAdmin}/my-account/edit?_method=PUT`, 
        method="POST" 
        enctype="multipart/form-data") 
        .form-group 
            label(for="fullName") Họ tên *
            input(
                type="text", 
                class ="form-control"
                id="fullName"
                name="fullName"
                value=user.fullName
                required
                )
        .form-group 
            label(for="email") Email *
            input(
                type="text"
                class ="form-control"
                id="email"
                name="email"
                value=user.email
                required
                )
        .form-group 
            label(for="password") Mật khẩu *
            input(
                type="password", 
                class ="form-control"
                id="password"
                name="password"
                )
        .form-group 
            label(for="phone") Số điện thoại
            input(
                type="text", 
                class ="form-control"
                id="phone"
                name="phone"
                value=user.phone
                )
        .form-group(upload-image)
            label(for="avatar") Avatar
            input(
                type="file", 
                class ="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
                value=user.avatar
                )
            if(user.avatar)
                img(src=user.avatar upload-image-preview 
                class=`image-preview`
                )
            else 
                img(src="/admin/images/avatar.png"  class="image-preview")
        .form-group
            button(
                type="submit"
                class ="btn btn-primary"
            ) Lưu