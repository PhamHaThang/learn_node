extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main 
    +alert-error(5000)
    h1(class="mb-4") Chỉnh sửa danh mục sản phẩm

    form(
        action=`${prefixAdmin}/products-category/edit/${record.id}?_method=PUT`, 
        method="POST" 
        enctype="multipart/form-data") 
        .form-group 
            label(for="title") Tiêu đề
            input(
                type="text", 
                class ="form-control"
                id="title"
                name="title"
                required
                value=record.title
                )
        .form-group 
            label(for="parent_id") Danh mục cha
            select(
                name="parent_id"
                id="parent_id"
                class="form-control"
            )
                option(value="") -- Chọn danh mục cha --
                if(records)
                    +select-tree(records,1,record.parent_id)
        .form-group 
            label(for="desc") Mô tả
            textarea(
                class ="form-control"
                id="desc"
                name="description"
                rows="5"
                value= record.description
                ) !{record.description}
        .form-group(upload-image)
            label(for="thumbnail") Ảnh
            input(
                type="file", 
                class ="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                value=record.thumbnail
                upload-image-input
                )
            img(src=record.thumbnail
                upload-image-preview 
                class=`image-preview ${record.thumbnail?"":"d-none"}`
                )
        .form-group 
            label(for="position") Vị trí
            input(
                type="number", 
                class ="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value=record.position
                )
        .form-group.form-check.form-check-inline 
            input(
                type="radio", 
                class="form-check-input"
                id="statusActive"
                name ="status"
                value="active"
                checked=(record.status=="active")
                )
            label(for="statusActive" class="form-check-label") Hoạt động
        .form-group.form-check.form-check-inline 
            input(
                type="radio", 
                class="form-check-input"
                id="statusInactive"
                name ="status"
                value="inactive"
                checked=(record.status=="inactive")
                )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động
        .form-group
            button(
                type="submit"
                class ="btn btn-primary"
            ) Lưu
    script(src="/admin/js/product.js") 
    