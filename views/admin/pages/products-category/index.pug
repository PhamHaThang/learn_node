extends ../../layouts/default.pug

block main
    h1 Danh mục sản phẩm

    .card.mb-3 
        .card-header Danh sách sản phẩm
        .card-body 
            .row.mb-3
                .col-8 
                .col-4
                    a(
                        href=`${prefixAdmin}/products-category/create`
                        class = "btn btn-outline-success"
                    ) + Thêm mới
            table.table.table-hover.table-sm(checkbox-multi) 
                thead 
                    tr 
                        th  
                            input(type="checkbox" name="checkall")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody 
                    each item,index in records
                        tr 
                            th  
                                input(
                                    type="checkbox" 
                                    name="id"
                                    value=item.id
                                )
                            td #{ index+1}
                            td 
                                img(src= item.thumbnail, alt= item.title width="100px" height="auto")
                            td #{item.title}
                            td 
                                input(
                                    type="number" 
                                    name="position"
                                    value=item.position 
                                    style="width:60px"
                                    min="1"
                                )
                            td 
                                a(
                                    href="javascript:;" 
                                    button-change-status 
                                    data-status= item.status
                                    data-id= item.id
                                    class=`badge ${item.status == "active"?"badge-success": "badge-danger"}`
                                    ) #{item.status == "active"?"Hoạt động": "Không hoạt động"}
                            td 
                                a(class="btn btn-secondary btn-sm" href=`${prefixAdmin}/products-category/detail/${item.id}`) Chi tiết
                                a(class="btn btn-warning btn-sm mx-1" href=`${prefixAdmin}/products-category/edit/${item.id}`) Sửa
                                button(
                                    class="btn btn-danger btn-sm"
                                    data-id=item.id
                                    button-delete
                                ) Xóa
    