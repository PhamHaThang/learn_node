extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    +alert-error(5000)
    h1(class="mb-4") Tạo mới nhóm quyền

    form(
        action=`${prefixAdmin}/roles/create`, 
        method="POST" ) 
        .form-group 
            label(for="title") Tiêu đề
            input(
                type="text", 
                class ="form-control"
                id="title"
                name="title"
                required
                )
        .form-group 
            label(for="desc") Mô tả
            textarea(
                class ="form-control"
                id="desc"
                name="description"
                rows="5"
                )
        .form-group
            button(
                type="submit"
                class ="btn btn-primary"
            ) Tạo mới
    