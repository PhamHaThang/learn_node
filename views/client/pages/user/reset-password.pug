extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-6
                h1.text-center Đổi mật khẩu
                form(
                    action=`/user/password/reset`, method="POST"
                    )
                    .form-group 
                        label(for="password") Mật khẩu mới 
                        input(
                            type="password"
                            class ="form-control"
                            id="password"
                            name="password"
                            required
                        ) 
                    .form-group 
                        label(for="passwordConfirm") Xác nhận mật khẩu
                        input(
                            type="password"
                            class ="form-control"
                            id="passwordConfirm"
                            name="passwordConfirm"
                            required
                        ) 
                    .form-group 
                        button(type="submit"
                            class="btn btn-primary btn-block"
                         ) Xác nhận